<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Hotels</title>
    <style>
        /* Styling for Hotels Table */
        body {
            background-color: #101010; /* Darker Black */
            color: #a8d5ba; /* Light Green Text */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        h1 {
            color: #78dd26; /* Fresh Green */
            text-align: center;
            font-weight: bold;
            text-shadow: 2px 2px 10px rgba(102, 187, 106, 0.8);
            margin-bottom: 20px;
        }

        /* Cover Div */
        .cover-div {
            border: 2px solid #4caf50; /* Green Border */
            border-radius: 10px;
            padding: 20px;
            background-color: #121212; /* Dark Background for the div */
            opacity: 0;
            animation: divFadeIn 1s forwards;
        }

        /* Table Styling */
        .table {
            border-radius: 10px;
            overflow: hidden;
            background: #121212;
        }

        .table thead {
            background: linear-gradient(90deg, #43a047, #2e7d32); /* Dark Green */
            color: #ffffff;
        }

        .table tbody tr {
            border-bottom: 1px solid #2e7d32; /* Green Border */
        }

        .table tbody tr:hover {
            background: rgba(76, 175, 80, 0.2); /* Hover Effect */
            transition: background-color 0.3s ease;
        }

        .table td, .table th {
            text-align: center;
            padding: 12px;
        }

        /* Button Styling */
        .btn {
            transition: all 0.3s ease;
            border-radius: 5px;
            padding: 8px 15px;
            font-weight: bold;
        }

        .btn-outline-info {
            color: #4caf50;
            border: 1px solid #4caf50;
        }

        .btn-outline-info:hover {
            background-color: #4caf50;
            color: #121212;
            transform: scale(1.1);
        }

        .btn-warning {
            background-color: #ffa726; /* Light Orange */
            color: #121212;
        }

        .btn-warning:hover {
            background-color: #fb8c00;
            transform: scale(1.1);
        }

        .btn-danger {
            background-color: #ef5350; /* Bright Red */
            color: #ffffff;
        }

        .btn-danger:hover {
            background-color: #d32f2f;
            transform: scale(1.1);
        }

        /* Table Fade-In Animation */
        @keyframes tableFadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Div Fade-In Animation */
        @keyframes divFadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <%- include('../partials/navbar'); %>
    <div class="container mt-5">
        <h1 class="mb-4">Hotels</h1>
        <div class="cover-div">
            <a href="/hotels/create" class="btn btn-outline-info mb-3">Add Hotel</a>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Rating</th>
                            <th>Package ID</th>
                            <th>Vendor ID</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% hotels.forEach(hotel => { %>
                            <tr>
                                <td><%= hotel.HotelID %></td>
                                <td><%= hotel.Hotel_Name %></td>
                                <td><%= hotel.Location %></td>
                                <td><%= hotel.Rating %></td>
                                <td><%= hotel.PackageID %></td> <!-- Show PackageID -->
                                <td><%= hotel.VendorID %></td> <!-- Show VendorID -->
                                <td>
                                    <a href="/hotels/edit/<%= hotel.HotelID %>" class="btn btn-warning btn-sm mr-2">Edit</a>
                                    <form action="/hotels/delete/<%= hotel.HotelID %>" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
