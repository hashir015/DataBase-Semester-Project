<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<style>
    /* Overall Page Styling */
    body {
        background-color: #101010; /* Darker Black */
        color: #a8d5ba; /* Light Green Text */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Header Styling */
    h1 {
        color: #78dd26; /* Fresh Green */
        text-align: center;
        font-weight: bold;
        text-shadow: 2px 2px 10px rgba(102, 187, 106, 0.8);
        margin-bottom: 20px;
    }

    /* Card Styling */
    .card {
        background: #181818; /* Pure Dark Background */
        border: 1px solid #4caf50; /* Subtle Green Border */
        border-radius: 15px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.8), 0 0 10px rgba(76, 175, 80, 0.3);
        padding: 20px;
        animation: fadeIn 1s ease-in-out;
    }

    /* Cover Div below Header */
    .cover-div {
        background-color: #121212;
        border-radius: 10px;
        border: 1px solid #4caf50; /* Green Border */
        padding: 15px;
        animation: fadeIn 1s ease-in-out; /* Apply fade-in animation */
    }

    /* Table Styling */
    .table {
        border-radius: 10px;
        overflow: hidden;
        background: #121212;
        opacity: 0; /* Start with invisible table */
        animation: tableFadeIn 1s forwards; /* Fade-in animation for the table */
    }

    .table thead {
        background: linear-gradient(90deg, #43a047, #2e7d32); /* Darker Green Header */
        color: #ffffff;
    }

    .table tbody tr {
        border-bottom: 1px solid #2e7d32; /* Green Border */
    }

    .table tbody tr:hover {
        background: rgba(76, 175, 80, 0.2); /* Subtle Green Hover */
        transition: background-color 0.3s ease;
    }

    .table td, .table th {
        text-align: center;
        padding: 12px;
    }

    /* Button Styling */
    .btn {
        transition: all 0.3s ease;
        border-radius: 5px;
        padding: 8px 15px;
        font-weight: bold;
    }

    .btn-outline-info {
        color: #4caf50;
        border: 1px solid #4caf50;
    }

    .btn-outline-info:hover {
        background-color: #4caf50;
        color: #121212;
        transform: scale(1.1);
    }

    .btn-warning {
        background-color: #ffa726; /* Light Orange */
        color: #121212;
    }

    .btn-warning:hover {
        background-color: #fb8c00;
        transform: scale(1.1);
    }

    .btn-danger {
        background-color: #ef5350; /* Bright Red */
        color: #ffffff;
    }

    .btn-danger:hover {
        background-color: #d32f2f;
        transform: scale(1.1);
    }

    /* Fade In Animation */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Table Fade In Animation */
    @keyframes tableFadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
<body>
    <%- include('../partials/navbar') %>
    <div class="container mt-4">
        <h1>Bookings</h1>
        <div class="cover-div">
            <a href="/bookings/create" class="btn btn-outline-info mb-3">+ Add New Booking</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Customer</th>
                            <th>Booking Date</th>
                            <th>Status</th>
                            <th>Total Amount</th>
                            <th>Coupon</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(booking => { %>
                        <tr>
                            <td><%= booking.BookingID %></td>
                            <td><%= booking.CustomerID %></td>
                            <td><%= new Date(booking.BookingDate).toLocaleDateString() %></td>
                            <td><%= booking.Booking_Status %></td>
                            <td><%= booking.TotalAmount.toFixed(2) %></td>
                            <td><%= booking.CouponID %></td>
                            <td class="d-flex gap-2">
                                <a href="/bookings/edit/<%= booking.BookingID %>" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
                                <form action="/bookings/delete/<%= booking.BookingID %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
