<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Destination</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Add New Destination</h1>
        <form action="/destinations/create" method="POST">
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" class="form-control" id="country" name="Country" required>
            </div>
            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="City" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="Destination_Description" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="package" class="form-label">Select Package</label>
                <select class="form-control" id="package" name="PackageID" required>
                    <% packages.forEach(package => { %>
                        <option value="<%= package.PackageID %>"><%= package.Package_Name %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/destinations" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
