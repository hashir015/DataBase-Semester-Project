<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/navbar') %>
    <div class="container mt-4">
        <h1>Add New Customer</h1>
        <form action="/customers/create" method="POST">
            <div class="mb-3">
                <label for="Cust_Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Cust_Name" name="Cust_Name" required>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input type="email" class="form-control" id="Email" name="Email" required>
            </div>
            <div class="mb-3">
                <label for="Phone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="Phone" name="Phone" required>
            </div>
            <div class="mb-3">
                <label for="Cust_Address" class="form-label">Address</label>
                <input type="text" class="form-control" id="Cust_Address" name="Cust_Address" required>
            </div>
            <div class="mb-3">
                <label for="DateOfRegistration" class="form-label">Date of Registration</label>
                <input type="date" class="form-control" id="DateOfRegistration" name="DateOfRegistration" required>
            </div>
            <button type="submit" class="btn btn-success">Add Customer</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
