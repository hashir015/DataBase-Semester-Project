<%- include('../partials/head') %>
<body>
  <%- include('../partials/navbar') %>

  <div class="container mt-5">
    <h1>Edit Flight</h1>
    <form action="/flights/edit/<%= flight.FlightID %>" method="POST">
      <div class="form-group">
        <label for="Airline">Airline:</label>
        <input type="text" name="Airline" id="Airline" class="form-control" value="<%= flight.Airline %>" required>
      </div>
      <div class="form-group">
        <label for="FlightNumber">Flight Number:</label>
        <input type="text" name="FlightNumber" id="FlightNumber" class="form-control" value="<%= flight.FlightNumber %>" required>
      </div>
      <div class="form-group">
        <label for="DepartureTime">Departure Time:</label>
        <input type="datetime-local" name="DepartureTime" id="DepartureTime" class="form-control" value="<%= flight.DepartureTime.toISOString().slice(0, 16) %>" required>
      </div>
      <div class="form-group">
        <label for="ArrivalTime">Arrival Time:</label>
        <input type="datetime-local" name="ArrivalTime" id="ArrivalTime" class="form-control" value="<%= flight.ArrivalTime.toISOString().slice(0, 16) %>" required>
      </div>
      <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" name="Price" id="Price" class="form-control" value="<%= flight.Price %>" required>
      </div>
      <div class="form-group">
        <label for="DestinationID">Destination ID:</label>
        <input type="number" name="DestinationID" id="DestinationID" class="form-control" value="<%= flight.DestinationID %>" required>
      </div>
      <div class="form-group">
        <label for="PackageID">Package ID:</label>
        <input type="number" name="PackageID" id="PackageID" class="form-control" value="<%= flight.PackageID %>" required>
      </div>
      <div class="form-group">
        <label for="VendorID">Vendor ID:</label>
        <input type="number" name="VendorID" id="VendorID" class="form-control" value="<%= flight.VendorID %>" required>
      </div>
    
      <button type="submit" class="btn btn-warning mt-3">Update</button>
    </form>
  </div>

</body>
